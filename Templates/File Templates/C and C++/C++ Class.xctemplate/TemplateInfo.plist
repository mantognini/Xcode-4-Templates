<dict>

    <key>Summary</key>
    <string>A C++ class</string>
    
    <key>Description</key>
    <string>A C++ class : a header and a source file.</string>

    <key>AllowedTypes</key>
    <array>
        <string>public.c-plus-plus-source</string>
    </array>
    
    <key>DefaultCompletionName</key>
    <string>MyClass</string>

    <key>Kind</key>
    <string>Xcode.IDEKit.TextSubstitutionFileTemplateKind</string>
    
    <!-- choose the logo of the template -->
    <key>MainTemplateFile</key>
    <string>___FILEBASENAME___.cpp</string>

    <key>Options</key>
    <array>
        <!-- product name : based on the class name -->
        <dict>
            <key>Default</key>
            <string>___VARIABLE_className:identifier___</string>
            <key>Identifier</key>
            <string>productName</string>
            <key>Type</key>
            <string>static</string>
        </dict>

        <!-- class name -->
        <dict>
            <key>Description</key>
            <string>The name of the class to create</string>
            <key>Identifier</key>
            <string>className</string>
            <key>Name</key>
            <string>Class Name</string>
            <key>NotPersisted</key>
            <false/>
            <key>Required</key>
            <true/>
            <key>Type</key>
            <string>text</string>
        </dict>
    </array>
</dict>
